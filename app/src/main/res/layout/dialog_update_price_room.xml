<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_dialog_room_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your new price : "
        android:textStyle="bold"
        android:textColor="@color/blue_main"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="15dp"
        android:layout_margin="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_dialog_room_price"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="Price per day"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:paddingStart="10dp" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_dialog_room_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:backgroundTint="#000D5DC8"
        android:textColor="@color/blue_main"
        app:strokeWidth="1dp"
        app:strokeColor="@color/blue_main"
        app:cornerRadius="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />



</LinearLayout>