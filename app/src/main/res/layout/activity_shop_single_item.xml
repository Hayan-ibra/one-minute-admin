<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shops.ShopSingleItem"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ShopSingleItem_image"
        />
    <TextView
        android:id="@+id/ShopSingleItem_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/blue_main"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/ShopSingleItem_text_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="available quantity"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/ShopSingleItem_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Catigories :"
        android:textColor="@color/blue_main"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"


        />

    <TextView
        android:id="@+id/ShopSingleItem_text_catigories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cat1 ,cat2 ,cat3"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genders :"
        android:textColor="@color/blue_main"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"


        />

    <TextView
        android:id="@+id/ShopSingleItem_text_genders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cat1 ,cat2 ,cat3"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ShopSingleItem_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_drive_file_rename_outline_24"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            />

    </LinearLayout>


</ScrollView>