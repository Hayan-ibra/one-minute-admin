<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadingfood.FoodSingleItem"
    android:background="#E8EFF8">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_foood_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_food_details"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            app:collapsedTitleTextColor="@color/white"
            app:titleCollapseMode="scale"
            app:contentScrim="@color/blue_main"
            app:expandedTitleMarginStart="20dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            >





            <ImageView
                android:id="@+id/food_image_food_details"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:src="@color/cardview_shadow_start_color"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"

                android:fitsSystemWindows="true"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/Theme.AppCompat.Light"/>









        </com.google.android.material.appbar.CollapsingToolbarLayout>







    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"


            >





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"




                >

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/lighter_accent"
                    app:cardCornerRadius="40dp"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/blue_accent"
                        app:cardCornerRadius="40dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/baseline_attach_money_24"
                            android:paddingStart="7dp"
                            android:paddingEnd="7dp"

                            />




                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_card_price_food_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:padding="5dp"
                        android:text="Price"
                        android:layout_margin="3dp"
                        android:textColor="@color/blue_main" />



                </com.google.android.material.card.MaterialCardView>



                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/lighter_accent"
                    app:cardCornerRadius="40dp"
                    android:layout_margin="10dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/blue_accent"
                        app:cardCornerRadius="40dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/baseline_access_time_24"
                            android:padding="7dp"
                            />




                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_card_time_food_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:padding="5dp"
                        android:text="Time"
                        android:layout_margin="3dp"
                        android:textColor="@color/blue_main" />



                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:backgroundTint="@color/lighter_accent"
                    app:cardCornerRadius="40dp"
                    android:layout_margin="10dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/blue_accent"
                        app:cardCornerRadius="40dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/baseline_restaurant_menu_24"
                            android:padding="7dp"
                            />




                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_card_type_food_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:padding="5dp"
                        android:text="Type"
                        android:layout_margin="3dp"
                        android:textColor="@color/blue_main" />



                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lighter_accent"
                android:layout_margin="15dp"
                app:cardCornerRadius="20dp"
                android:elevation="10dp"


                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_description_24"
                        android:drawablePadding="5dp"

                        android:text="Name :"
                        android:textSize="24dp"
                        android:drawableTint="@color/blue_main"
                        android:layout_marginStart="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_main"
                        />


                    <TextView
                        android:id="@+id/text_name_food_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="ingredients : iuudasdiasnoidmasdosapo  dasdsad saddsa dasdsa sad"
                        android:textColor="@color/blue_main"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"

                        />






                    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_fastfood_24"
                android:drawablePadding="5dp"

                android:text="Ingredients :"
                android:textSize="24dp"
                android:drawableTint="@color/blue_main"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:textColor="@color/blue_main"
                />


                    <TextView
                        android:id="@+id/text_ingredients_food_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="ingredients : iuudasdiasnoidmasdosapo  dasdsad saddsa dasdsa sad"
                        android:textColor="@color/blue_main"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_description_24"
                        android:text="Description :"
                        android:layout_marginTop="15dp"
                        android:textSize="24dp"
                        android:drawableTint="@color/blue_main"
                        android:layout_marginStart="15dp"
                        android:textStyle="bold"
                        android:drawablePadding="4dp"
                        android:textColor="@color/blue_main"
                        />


                    <TextView
                android:id="@+id/text_description_food_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description : iuudasdiasnoidmasdosapo  dasdsad saddsa dasdsa sad"
                android:textSize="20dp"
                android:textColor="@color/blue_main"
                android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton_food_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"


        android:src="@drawable/baseline_delete_24" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>