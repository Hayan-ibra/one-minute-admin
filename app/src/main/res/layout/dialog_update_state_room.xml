<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_main"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="change reservation state"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"

        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/dialog_room_state_radioButton_reserved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserved "
            android:layout_gravity="start"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/dialog_room_state_radioButton_not_reserved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:layout_weight="1"
            android:layout_gravity="end"/>
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_room_state_button_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change"
        android:backgroundTint="#000D5DC8"
        android:textColor="@color/blue_main"
        app:strokeColor="@color/blue_main"
        app:strokeWidth="1dp"
        app:cornerRadius="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />


</LinearLayout>