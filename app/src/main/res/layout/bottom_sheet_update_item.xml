<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background_01"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update item fields"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blue_main"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bottom_sheet_update_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/blue_main"
            android:hint="Price (you can live it empty)"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"



            android:maxLines="1"

            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        app:layout_constraintTop_toBottomOf="@+id/textinput">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bottom_sheet_update_item_quantty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/blue_main"
            android:hint="Quantity  (you can live it empty)"
            android:imeOptions="actionDone"
            android:inputType="number"


            android:maxLines="1"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Update"
        app:cornerRadius="10dp"
        android:id="@+id/bottom_sheet_update_item_button_update"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="40dp"

        />
</LinearLayout>