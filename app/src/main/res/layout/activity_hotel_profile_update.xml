<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotels.HotelProfileUpdate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_main"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Create Your Hotel Profile"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="175dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"

            >
            <ImageView
                android:id="@+id/HotelProfileUpdate_image_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_add_24"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/HotelProfileUpdate_edittext_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/blue_main"
                    android:hint="Hotel name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    />

            </com.google.android.material.textfield.TextInputLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:layout_marginEnd="7dp"
                    android:layout_weight="1"


                    app:layout_constraintTop_toBottomOf="@+id/textinput">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/HotelProfileUpdate_edittext_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_location_city_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/blue_main"
                        android:hint="City"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"

                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"


                    app:layout_constraintTop_toBottomOf="@+id/textinput">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/HotelProfileUpdate_edittext_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_location_on_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/blue_main"
                        android:hint="Location"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:maxLines="1"

                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/HotelProfileUpdate_edittext_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_phone_enabled_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/blue_main"
                    android:hint="Phone number"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLines="1"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/HotelProfileUpdate_descrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_description_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/blue_main"
                    android:hint="description"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="3"

                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <ProgressBar
            android:id="@+id/HotelProfileUpdate_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/HotelProfileUpdate_button_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update profile"
            android:layout_gravity="bottom|center_horizontal"
            app:cornerRadius="10dp"
            android:layout_marginTop="50dp"

            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>