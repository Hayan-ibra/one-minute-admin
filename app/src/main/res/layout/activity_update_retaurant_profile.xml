<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadingfood.UpdateRestaurantProfile"
    android:background="@drawable/fff">




    <LinearLayout
        android:id="@+id/linearLayout14"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:orientation="vertical"
        android:padding="10dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.0">



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"




            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_resname_updte_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue_main"
                android:hint="Restaurant name"
                android:imeOptions="actionNext"
                android:layout_marginEnd="7dp"


                android:inputType="text"


                android:maxLines="1"

                />

        </com.google.android.material.textfield.TextInputLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"


                app:layout_constraintTop_toBottomOf="@+id/textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_city_update_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_location_city_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/blue_main"
                    android:hint="City"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_weight="1"
                android:layout_marginStart="7dp"


                app:layout_constraintTop_toBottomOf="@+id/textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittext_location_update_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_location_on_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/blue_main"
                    android:hint="Location"
                    android:imeOptions="actionNext"
                    android:inputType="text"

                    android:maxLines="1"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="15dp"

            app:layout_constraintTop_toBottomOf="@+id/textinput">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_phonenum_update_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_phone_enabled_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue_main"
                android:hint="Phone number"
                android:imeOptions="actionDone"
                android:inputType="phone"

                android:maxLines="1"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </ScrollView>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_description_update_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_description_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/blue_main"
                android:hint="description"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="3"

                />

        </com.google.android.material.textfield.TextInputLayout>























    </LinearLayout>


    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lighter_accent"
        app:cardCornerRadius="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154">

        <ImageView
            android:id="@+id/imageView_profile_update_restaurant"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"


            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView_restaurant_update_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update your account:"
        android:textColor="@color/white"
        android:textSize="28dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />





    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_update_profile"

        android:layout_margin="25dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/light_secondary"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout14"


        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="work time: "
                android:textColor="@color/blue_main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="from "
                    android:textColor="@color/blue_main"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/from_time_text_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here"
                    android:textColor="#E60DC887"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" to "
                    android:textColor="@color/blue_main"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/to_time_text_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here"
                    android:textColor="#E60DC887"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_update_update_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Edit profile"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_update_profile" />

    <ProgressBar
        android:id="@+id/progressBar_food_profile_update"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />
  </androidx.constraintlayout.widget.ConstraintLayout>